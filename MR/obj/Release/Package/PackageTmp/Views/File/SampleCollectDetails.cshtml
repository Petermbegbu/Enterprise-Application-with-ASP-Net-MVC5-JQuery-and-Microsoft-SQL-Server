
@{
    ViewBag.Title = "SampleCollectDetails";
    ViewBag.TitleBar = "SAMPLE COLLECTION DETAILS";
    Layout = "~/Views/Shared/_MRFormLayout.cshtml";
}


<section>
    <form method="post" action="#">

        <div class="dif">


            <section class="bdr-f w-100 va-top">

                <div class="newline n1 ">
                    <label class="label w-5 w-35 ">Service Centre</label>
                    <input type="text" list="cbo" class="input w-7 w-50 increase-height" />
                    <datalist id="cbo">
                        <option value="">-Select VALUE-</option>
                        <option value="VALUE">VALUE</option>
                    </datalist>

                    <span class="span">
                        <label class="label w-5 w-35 "></label>
                        <input type="checkbox" id="chkSRA" name="chk" />
                        <label for="chkSRA" class="label">In-Patient</label>
                    </span>

                </div>

            </section>


            <section class="bdr-f w-100 va-top">

                <section class="inline-block">

                    <div class="newline n1">
                        <label class="label w-4 w-35 drk">Transaction Date</label>
                        <input type="date" name="date" class="input w-4 w-50 increase-height design" />

                        <span class="span">
                            <label class="label w-3 w-35 drk">Service Ref.#</label>
                            <input type="text" name="txt" value="" class="input w-4 w-50" />
                            <input type="button" name="btn" value="" class="btn-small" />
                        </span>
                    </div>

                    <div class="newline n1">
                        <label class="label w-7 w-35 drk">Consultation/Cross Reference</label>
                        <input type="text" name="txt" value="" class="input w-4 w-50" />
                        <input type="button" name="btn" value="" class="btn-small" />
                    </div>

                    <div class="newline n1">
                        <label class="label w-5 w-35">Patient's Group Code</label>
                        <input type="text" name="txt" value="" class="input w-4 w-50" />
                    </div>

                    <div class="newline n1">
                        <label class="label w-5 w-35">Patient's #</label>
                        <input type="text" name="txt" value="" class="input w-4 w-50" />
                    </div>

                    <div class="newline n1">
                        <label class="label w-5 w-35">FULL NAME</label>
                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                    </div>

                    <div class="newline n1">
                        <label class="label w-5 w-35">Address</label>
                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                    </div>

                    <div class="newline n1">
                        <label class="label w-5 w-35">Sex</label>
                        <input type="text" list="cbo" class="input w-4 w-50 increase-height" />
                        <datalist id="cbo">
                            <option value="">-Select VALUE-</option>
                            <option value="VALUE">VALUE</option>
                        </datalist>

                        <span class="span">
                            <label class="label w-35">Age</label>
                            <input type="text" name="txt" value="" class="input w-1 w-50" />
                        </span>


                    </div>

                </section>


                <section class="inline-block va-top ">

                    <div class="newline n1">
                        <label class="label w-35 drk">Request Profile</label>
                    </div>

                    <div class="newline n1">
                        <textarea name="txt" value="" rows="4" class="txtarea ww100 w-50"></textarea>
                    </div>

                    <div class="newline n1">
                        <label class="label w-3 w-35">Bills Payable By</label>
                        <input type="text" name="txt" value="" class="input w-5 w-50" />

                        <span class="span">
                            <input type="text" name="txt" value="" class="input w-3 w-50" />
                        </span>

                        <span class="span">
                            <input type="text" name="txt" value="" class="input w-3 w-50" />
                        </span>
                    </div>

                    <div class="newline n1">
                        <label class="label w-3 w-35">Referring Doctor</label>
                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                    </div>


                </section>


            </section>



            <section class=" w-100 va-top">

                <div class="newline n1">
                    <label class="label w-5 w-35 drk">Sample Collected By</label>
                    <input type="text" name="txt" value="" class="input w-7 w-50" />

                    <span class="span">
                        <label class="label w-5 w-35">Date/Time</label>
                        <input type="date" name="date" class="input w-5 w-50 increase-height design" />
                    </span>
                </div>

                <div class="newline n1 red">
                    <label class="label w-5 w-35 drk">Sample Type Collected</label>
                    <input type="checkbox" id="chkSRA1" name="chk" />
                    <label for="chkSRA1" class="label drk">Blood</label>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA2" name="chk" />
                        <label for="chkSRA2" class="label drk">Sputum</label>
                    </span>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA3" name="chk" />
                        <label for="chkSRA3" class="label drk">Stool</label>
                    </span>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA4" name="chk" />
                        <label for="chkSRA4" class="label drk">Urine</label>
                    </span>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA5" name="chk" />
                        <label for="chkSRA5" class="label drk">Swab</label>
                    </span>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA6" name="chk" />
                        <label for="chkSRA6" class="label drk">Semen</label>
                    </span>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA7" name="chk" />
                        <label for="chkSRA7" class="label drk">Hair</label>
                    </span>

                    <span>
                        <label class="label w-3 w-35 drk">Others(Specify)</label>
                        <input type="text" name="txt" value="" class="input w-5 w-50" />
                    </span>
                </div>


            </section>

            <section class="bdr-f w-100 va-top alr">

                <div class="newline n1">
                    <label class="label w-9 w-35 drk">Notes for Patients Medical History</label>
                    <label class="label w-7 w-35"></label>
                    <input type="button" name="btnPrint" value="Print Label" class="btn clm" />
                </div>

                <div class="newline n1">
                    <label class="label w-5 w-35">Default</label>
                    <input type="text" name="txt" value="" class="input ww50 w-50" />
                </div>

                <div class="newline n1">
                    <label class="label w-5 w-35">OTHERS</label>
                    <textarea name="txt" value="" rows="5" class="txtarea ww50 w-50"></textarea>
                </div>

            </section>

            <div class="dif">
                <div class="newline n1 alc">

                    <label class="label w-2"></label>
                    <input type="button" name="btnPrint" value="Print Report" class="btn clm" />

                    <label class="label w-2"></label>
                    <input type="button" name="btnPrint" value="Submit" class="btn clm" />

                    <label class="label w-2"></label>
                    <input type="button" name="btnPrint" value="Close" class="btn clm" />
                </div>
            </div>

        </div>

    </form>
</section>
