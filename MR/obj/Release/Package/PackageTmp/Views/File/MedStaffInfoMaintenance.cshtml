
@{
    ViewBag.Title = "MedStaffInfoMaintenance";
    ViewBag.TitleBar = "MEDICAL STAFF INFORMATION MAINTENANCE";
    Layout = "~/Views/Shared/_MRFormLayout.cshtml";
}


<section>
    <form method="post" action="#">

        <div class="dif">

            <!--Top Section -->
            <section>


                <div class="newline n1">
                    <label class="label w-6 w-35">Reference</label>
                    <input type="text" list="cbo" class="input w-4 w-50 increase-height" />
                    <datalist id="cbo">
                        <option value="">-Select VALUE-</option>
                        <option value="VALUE">VALUE</option>
                    </datalist>
                    <input type="button" name="btn" value="" class="btn-small" />
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Type</label>
                    <input type="text" list="cbo" class="input w-4 w-50 increase-height" />
                    <datalist id="cbo">
                        <option value="">-Select VALUE-</option>
                        <option value="VALUE">VALUE</option>
                    </datalist>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Staff Number</label>
                    <input type="text" name="txt" value="" class="input w-7 w-50" />
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Surname</label>
                    <input type="text" list="cbo" class="input w-7 w-50 increase-height" />
                    <datalist id="cbo">
                        <option value="">-Select VALUE-</option>
                        <option value="VALUE">VALUE</option>
                    </datalist>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Other Names</label>
                    <input type="text" list="cbo" class="input w-7 w-50 increase-height" />
                    <datalist id="cbo">
                        <option value="">-Select VALUE-</option>
                        <option value="VALUE">VALUE</option>
                    </datalist>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Full Name</label>
                    <input type="text" name="txt" value="" class="input w-10 w-50" />
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Phone</label>
                    <input type="text" name="txt" value="" class="input w-7 w-50" />

                    <span class="span">
                        <label class="label w-2 w-35">E-Mail</label>
                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                    </span>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Professional Reg. Date</label>
                    <input type="text" name="txt" value="" class="input w-4 w-50" />

                    <span class="span">
                        <label class="label w-3 w-35">Registration No.</label>
                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                    </span>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Department/Service Centre</label>
                    <input type="text" list="cbo" class="input w-7 w-50 increase-height" />
                    <datalist id="cbo">
                        <option value="">-Select VALUE-</option>
                        <option value="VALUE">VALUE</option>
                    </datalist>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35"></label>
                    <input type="checkbox" id="chkSRA" name="chk" />
                    <label for="chkSRA" class="label">Restrictive/Exclusive</label>

                    <span class="span al-c">
                        <input type="checkbox" id="chkSRA1" name="chk" />
                        <label for="chkSRA1" class="label">Global Access To Patients Data</label>
                    </span>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Consultation Charge</label>
                    <input type="text" name="txt" value="0.00" class="input w-4 w-50 alr" />

                    <span class="span">
                        <label class="label w-6 w-35">Default Consulting Room</label>
                        <input type="text" list="cbo" class="input w-4 w-50 increase-height" />
                        <datalist id="cbo">
                            <option value="">-Select VALUE-</option>
                            <option value="VALUE">VALUE</option>
                        </datalist>
                    </span>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35"></label>
                    <input type="checkbox" id="chkSRA2" name="chk" />
                    <label for="chkSRA2" class="label">Enable Unrestricted Drugs/Procedure Selection During Consulting </label>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Last Login</label>
                    <input type="text" name="txt" value="" class="input w-4 w-50" />

                    <span class="span">
                        <label class="label w-1 w-35">OUT</label>
                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                    </span>
                </div>

                <div class="newline n1 line-height">
                    <label class="label w-6 w-35">Last Login Active</label>
                    <input type="checkbox" id="chkSRA3" name="chk" />
                    <label for="chkSRA3" class="label transp">.</label>
                </div>

                <div class="newline n1">
                    <label class="label w-6 w-35">Additional Data</label>
                    <textarea name="txt" value="" rows="3" class="txtarea w-10 w-50"></textarea>
                </div>




            </section>



            <!--Button-Below Section -->
            <section>


                <div class="dif">
                    <div class="newline n1 alc">

                        <label class="label w-2"></label>
                        <input type="button" name="btnPrint" value="Print" class="btn clm" />

                        <label class="label w-2"></label>
                        <input type="button" name="btnPrint" value="Submit" class="btn clm" />
                        <input type="button" name="btnPrint" value="Delete" class="btn clm" />

                        <label class="label w-2 "></label>
                        <input type="button" name="btnPrint" value="Close" class="btn clm" />

                    </div>
                </div>
            </section>


        </div>
       
    </form>
</section>


