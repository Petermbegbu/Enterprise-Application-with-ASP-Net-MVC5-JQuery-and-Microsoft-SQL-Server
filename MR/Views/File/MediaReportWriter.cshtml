
@{
    ViewBag.Title = "MediaReportWriter";
    ViewBag.TitleBar = "MEDIA REPORT WRITER";
    Layout = "~/Views/Shared/_MRFormLayout.cshtml";
}


<section>
    <form method="post" action="#">

        <div class="diff deep">

            <ul class="nav nav-tabs">
                <li class="active">
                    <a data-toggle="tab" class="bold" href="#MedReport" style="background: #f9f9f9;">Medical Reports</a>
                </li>
                <li>
                    <a data-toggle="tab" class="bold" href="#PrevMedReport" style="background: #f9f9f9;">Previous Medical Report</a>
                </li>
                <li>
                    <a data-toggle="tab" class="bold" href="#Allergies" style="background: #f9f9f9;">Allergies/Special Instructions/Others</a>
                </li>
            </ul>

            <div class="tab-content">

                <div id="MedReport" class="tab-pane fade in active">

                    <div class="dif">

                        <section class="bdr-f w-100 va-top blu">

                            <!--Top Section-->

                            <section class="inline-block">

                                <div class="newline n1">
                                    <label class="label w-5 w-35 drk">REPORT REFERENCE</label>
                                    <input type="text" name="txt" value="" class="input w-5 w-50" />
                                    <input type="button" name="btn" value="" class="btn-small" />
                                </div>

                                <div class="newline n1">
                                    <label class="label w-5 w-35 drk">Patient Group Code</label>
                                    <input type="text" name="txt" value="" class="input w-4 w-50" />
                                    <input type="button" name="btn" value="" class="btn-small" />
                                </div>

                                <div class="newline n1">
                                    <label class="label w-5 w-35 drk">Patient Number</label>
                                    <input type="text" name="txt" value="" class="input w-4 w-50" />
                                    <input type="button" name="btn" value="" class="btn-small" />

                                    <span class="span">
                                        <input type="text" name="txt" value="" class="input w-7 w-50" />
                                    </span>
                                </div>

                                <div class="newline n1">
                                    <label class="label w-5 w-35 drk">Bills Payable By</label>
                                    <input type="text" name="txt" value="" class="input w-7 w-50" />
                                </div>


                            </section>


                            <section class="inline-block alr va-top">

                                <div class="newline n1 ">
                                    <textarea name="txt" value="" rows="5" class="txtarea w-10 w-50"></textarea>
                                </div>

                            </section>


                        </section>


                        <!--Centre Section-->


                        <section class="bdr-f w-100">

                            <div class="newline n1">
                                <label class="label w-5 w-35">REPORT DATE</label>
                                <input type="date" name="date" class="input w-4 w-50 increase-height design" />
                            </div>

                            <div class="newline n1">
                                <label class="label w-5 w-35">ADDRESSEE</label>
                                <textarea name="txt" value="" rows="3" class="txtarea w-10 w-50"></textarea>

                                <span class="span">
                                    <label class="label w-5 w-35"></label>
                                    <input type="text" name="txt" value="" class="input w-7 w-50" />
                                </span>
                            </div>

                            <div class="newline n1">
                                <label class="label w-5 w-35">SALUTATION</label>
                                <input type="text" name="txt" value="" class="input w-7 w-50" />
                            </div>

                            <div class="newline n1">
                                <label class="label w-5 w-35">REPORT HEADER</label>
                                <input type="text" name="txt" value="" class="input w-10 w-50" />
                            </div>

                                
                            <div class="inline-block ww17">
                                <label class="label w-3 w-35">REPORT DETAILS</label>

                                <br/>
                                <br/>
                                <br/>
                                <br/>

                            <div class="newline n1 bdr-f">
                                <div class="newline" n1>
                                    <input type="button" name="btnPrint" value="B" class="btn clm" />
                                    <input type="button" name="btnPrint" value="I" class="btn clm" />
                                    <input type="button" name="btnPrint" value="U" class="btn clm" />
                                </div>

                                <div class="newline n1">
                                    <label class="label w-1 w-35">LS: </label>
                                    <input type="number" name="range" value="0" class="input w-1 w-50 design" />
                                </div>

                                <div class="newline n1">
                                    <label class="label w-1 w-35">Font: </label>
                                    <input type="number" name="range" value="0" class="input w-1 w-50 design" />
                                </div>
                                
                            </div>
                            </div>


                            <div class="inline-block ww75 va-top">

                                <textarea name="txt" value="" rows="15" class="txtarea ww100 w-50"></textarea>

                            </div>



                        </section>


                        <div class="dif">

                            <div class="newline n1">
                                <label class="label w-4 w-35"></label>
                                <input type="button" name="btnPrint" value="Import" class="btn clm" />
                                <input type="button" name="btnPrint" value="Export" class="btn clm" />

                                <span class="span">
                                    <label class="label w-35">Other File Type</label>
                                    <input type="text" list="cbo" class="input w-2 w-50 increase-height" />
                                    <datalist id="cbo">
                                        <option value="">-Select VALUE-</option>
                                        <option value="VALUE">VALUE</option>
                                    </datalist>

                                    <input type="button" name="btnPrint" value="Submit" class="btn clm" />
                                    <input type="button" name="btnPrint" value="Print" class="btn clm" />
                                    <input type="button" name="btnPrint" value="Preview" class="btn clm" />
                                    <input type="button" name="btnPrint" value="Close" class="btn clm" />
                                </span>

                            </div>

                        </div>


                    </div>


                </div>

                <div id="PrevMedReport" class="tab-pane fade in">


                </div>

                <div id="Allergies" class="tab-pane fade in">

                    <div class="dif">


                        <section class="bdr-f w-100 va-top">

                            <div class="newline n1 ">
                                <label class="label w-7 w-35">HMO/NHIS PLAN TYPE</label>

                                <span class="span">
                                    <label class="label w-10 w-35">Servce Notes and Instructions</label>
                                </span>
                            </div>

                            <div class="newline n1 ">
                                <textarea name="txt" value="" rows="5" class="txtarea ww100 w-50 gry"></textarea>
                            </div>

                            <div class="newline n1 ">
                                <label class="label w-10 w-35">MEDICAL INSTRUCTIONS/ALLERGIES</label>
                            </div>

                            <div class="newline n1 ">
                                <textarea name="txt" value="" rows="5" class="txtarea ww100 w-50 ora"></textarea>
                            </div>

                            <div class="newline n1 ">
                                <label class="label w-10 w-35">SPECIAL INSTRUCTIONS (Administative)</label>
                            </div>

                            <div class="newline n1 ">
                                <textarea name="txt" value="" rows="5" class="txtarea ww100 w-50"></textarea>
                            </div>

                        </section>


                    </div>

                </div>

            </div>

        </div>

    </form>
</section>

