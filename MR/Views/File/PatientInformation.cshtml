@section scripts
{
    <script>
        $(document).ready(function () {

            $("#groupCode #getGC").on("click", function () {

                $.getJSON('/Customer/Ind/', function (data) {

                    var items = '<table><tr><th>Name</th><th>Address</th></tr>';
                    $.each(data, function (i, country) {
                        items += "<tr><td>" + country.Name + "</td><td>" + country.MembershipType.Name + "</td></tr>";
                    });
                    items += "</table>";

                    $('#me').html(items);
                });
            });


        });
    </script>
